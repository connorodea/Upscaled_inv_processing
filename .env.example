# Shared Database Connection (same as web platform)
DATABASE_URL="postgresql://postgres:password@localhost:5432/upscaled_crosslist?schema=public"

# Web Platform API (for cross-listing features)
WEB_PLATFORM_URL="http://localhost:3002"

# eBay API Credentials (existing)
EBAY_APP_ID=""
EBAY_CERT_ID=""
EBAY_DEV_ID=""
EBAY_AUTH_TOKEN=""
EBAY_ENVIRONMENT="SANDBOX"

# eBay OAuth (required for eBay comps analyzer)
# You can reuse EBAY_APP_ID/EBAY_CERT_ID as client ID/secret if preferred.
EBAY_CLIENT_ID=""
EBAY_CLIENT_SECRET=""
EBAY_REFRESH_TOKEN=""

# Feature Flags
USE_DATABASE=true           # true = PostgreSQL, false = CSV (fallback)
ENABLE_CROSS_LISTING=true   # Enable web platform integration
ENABLE_AI_ENRICHMENT=true   # Enable AI-powered listing optimization

# Printer Configuration (existing)
PRINTER_NAME="your-thermal-printer-name"
LABEL_WIDTH=384
LABEL_HEIGHT=576
